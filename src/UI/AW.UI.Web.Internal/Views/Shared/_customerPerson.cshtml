@{
    @model CustomerViewModel;
}

<div class="row">
    <div class="col-2">
        <label>Account number</label>
    </div>
    <div class="col">
        @Model.AccountNumber
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>Title</label>
    </div>
    <div class="col">
        @Model.Person.Title
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>Sales territory</label>
    </div>
    <div class="col">
        @Model.SalesTerritoryName
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>First name</label>
    </div>
    <div class="col">
        @Model.Person.FirstName
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>Middle name</label>
    </div>
    <div class="col">
        @Model.Person.MiddleName
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>Last name</label>
    </div>
    <div class="col">
        @Model.Person.LastName
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>Suffix</label>
    </div>
    <div class="col">
        @Model.Person.Suffix
    </div>
</div>
<div class="row">
    <div class="col-2">
        <label>E-mail promotion</label>
    </div>
    <div class="col">
        @{
            var emailPromotion = EnumHelper<EmailPromotionViewModel>.GetDisplayValue(Model.Person.EmailPromotion);
        }
        @emailPromotion
    </div>
</div>

<h4>Addresses</h4>
@if (Model.Person.Addresses.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Address type</th>
            <th>Address line 1</th>
            <th>Address line 2</th>
            <th>Postal code</th>
            <th>City</th>
            <th>State/Province</th>
            <th>Country</th>
        </tr>
    </thead>
    @foreach (var address in Model.Person.Addresses)
        {
    <tr>
        <td>@address.AddressTypeName</td>
        <td>@address.Address.AddressLine1</td>
        <td>@address.Address.AddressLine2</td>
        <td>@address.Address.PostalCode</td>
        <td>@address.Address.City</td>
        <td>@address.Address.StateProvinceName</td>
        <td>@address.Address.Country</td>
    </tr>
        }
</table>
}
else
{
<div class="row">
    No addresses found
</div>
}

<h4>Contact Information</h4>
@if (Model.Person.ContactInfo.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Channel</th>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>
    @foreach (var contactInfo in Model.Person.ContactInfo)
        {
    <tr>
        <td>
            @{
            var channel = EnumHelper<ContactInfoChannelTypeViewModel>.GetDisplayValue(contactInfo.ContactInfoChannelType);
            }
            @channel
        </td>
        <td>@contactInfo.ContactInfoType</td>
        <td>@contactInfo.Value</td>
    </tr>
        }
</table>
}
else
{
<div class="row">
    No contact information found
</div>
}