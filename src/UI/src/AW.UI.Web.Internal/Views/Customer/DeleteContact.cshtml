@{
    ViewData["Title"] = $"Delete contact - {Model.CustomerName}";
    @model DeleteCustomerContactViewModel;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AccountNumber)

<div class="form-horizontal detail">
    <h4>Are you sure you want to delete this?</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactType, new { @class = "control-label" })
        <input asp-for="ContactType" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson.Title, new { @class = "control-label" })
        <input asp-for="ContactPerson.Title" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactPerson.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson.FirstName, new { @class = "control-label" })
        <input asp-for="ContactPerson.FirstName" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactPerson.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson.MiddleName, new { @class = "control-label" })
        <input asp-for="ContactPerson.MiddleName" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactPerson.MiddleName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson.LastName, new { @class = "control-label" })
        <input asp-for="ContactPerson.LastName" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactPerson.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson.Suffix, new { @class = "control-label" })
        <input asp-for="ContactPerson.Suffix" readonly class="form-control-plaintext" />
        @Html.HiddenFor(m => m.ContactPerson.Suffix)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Detail", new { Model.AccountNumber }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
}