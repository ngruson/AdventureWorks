@model AW.UI.Web.Store.ViewModels.Cart.CheckoutViewModel

<section class="orders_new-section">
    <article class="orders_new-titles row">
        <section class="orders_new-title col-12">Order details</section>
    </article>

    @for (int i = 0; i < Model.Basket.Items.Count; i++)
    {
        var item = Model.Basket.Items[i];

        <article class="orders_new-items orders_new-items--border row">
            <section class="orders_new-item col-md-4 hidden-md-down">
                <img class="orders_new-image" src="@item.ThumbnailPhotoUrl">
                <input type="hidden" value="@item.ThumbnailPhotoUrl" name=@("Basket.items[" + i + "].ThumbnailPhotoUrl") />
            </section>
            <section class="orders_new-item orders_new-item--middle col-4">
                @item.ProductName
                <input type="hidden" value="@item.ProductName" name=@("Basket.items[" + i + "].ProductName") />
            </section>
            <section class="orders_new-item orders_new-item--middle col-1">
                $ @item.UnitPrice.ToString("N2")
                <input type="hidden" value="@item.UnitPrice" name=@("Basket.items[" + i + "].UnitPrice") />
            </section>
            <section class="orders_new-item orders_new-item--middle col-1">
                @item.Quantity
                <input type="hidden" value="@item.Quantity" name=@("Basket.items[" + i + "].Quantity") />
            </section>
            <section class="orders_new-item orders_new-item--middle col-2">$ @Math.Round(item.Quantity * item.UnitPrice, 2).ToString("N2")</section>
        </article>
    }
</section>

<section class="orders_new-section orders_new-section--right">
    <article class="orders_new-titles row">
        <section class="orders_new-title col-9"></section>
        <section class="orders_new-title col-2">Total</section>
    </article>

    <article class="orders_new-items row">
        <section class="orders_new-item col-9"></section>
        <section class="orders_new-item orders_new-item--mark col-2">
            $ @Model.Basket.Total.ToString("N2")
            <input type="hidden" value="@Model.Basket.Total" name="Total"/>
        </section>
    </article>
</section>