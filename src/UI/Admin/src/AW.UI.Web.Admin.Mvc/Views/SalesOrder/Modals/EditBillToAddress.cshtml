@model AW.UI.Web.Admin.Mvc.ViewModels.SalesOrder.SalesOrderViewModel
@{
    var countries = ViewData["countries"] as IEnumerable<SelectListItem>;
    var statesProvinces = ViewData["statesProvincesBillTo"] as IEnumerable<SelectListItem>;
}

<!-- Modal -->
<div class="modal fade" id="editBillToAddress" tabindex="-1" role="dialog" aria-labelledby="editBillToAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBillToAddressModalLabel">Edit Billing Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UpdateBillToAddress", "SalesOrder"))
                {
                    @Html.HiddenFor(_ => _.SalesOrderNumber)

                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.AddressLine1, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.BillToAddress!.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.AddressLine2, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.BillToAddress!.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.PostalCode, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.BillToAddress!.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.City, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.BillToAddress!.City, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.CountryRegionCode, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6 tom-select-custom">
                            @Html.DropDownListFor(m => m.BillToAddress!.CountryRegionCode, countries, null, new { @class = "js-select form-select", data_hs_tom_select_options = "{ 'searchInDropdown': false, 'hideSearch': true }" })
                        </div>
                    </div>
                    <div class="row mb-4">
                        @Html.LabelFor(m => m.BillToAddress!.StateProvinceCode, new { @class = "col-sm-6 col-form-label form-label" })
                        <div class="col-sm-6 tom-select-custom">
                            @Html.DropDownListFor(m => m.BillToAddress!.StateProvinceCode, statesProvinces, null, new { @class = "js-select form-select", data_hs_tom_select_options = "{ 'searchInDropdown': false, 'hideSearch': true }" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-sm-3">
                        <button type="button" class="btn btn-white me-2 me-sm-0" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update Billing Address</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>