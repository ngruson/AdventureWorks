@using AW.UI.Web.Admin.Mvc.ViewModels.Department;
@{
    ViewData["Title"] = $"Department detail - {Model.Department!.Name}";
    @model DepartmentDetailViewModel;
}

<!-- Page Header-->
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-no-gutter">
                    <li class="breadcrumb-item">@Html.ActionLink("Departments", "Index", "Department", null, new { @class="breadcrumb-link" })</li>
                    <li class="breadcrumb-item active" aria-current="page">Department details</li>
                </ol>
            </nav>
            <h1 class="page-header-title">@Model.Department.Name</h1>           
            <div class="mt-2">
                <a class="text-body me-3" asp-action="DeleteDepartment" asp-route-name="@Model.Department.Name">
                    <i class="bi-trash me-1"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>
<!-- End Page Header-->
<!-- Card -->
<div class="card mb-3 mb-lg-5">
    <!-- Header -->
    <div class="card-header card-header-content-between">
        <h4 class="card-header-title">Department information</h4>
        <a class="link" data-bs-toggle="modal" data-bs-target="#editDepartment" href="#">Edit</a>
    </div>
    <!-- End Header-->
    <!-- Body -->
    <div class="card-body">
        <!-- Form -->
        <div class="row">
            <div class="col-sm-3">
                <div class="mb-4">
                    @Html.LabelFor(m => m.Department!.Name, new { @class = "col-sm-3 col-form-label form-label" })
                    <input type="text" class="form-control" value="@Model.Department.Name" readonly>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="mb-4">
                    @Html.LabelFor(m => m.Department!.GroupName, new { @class = "col-sm-3 col-form-label form-label" })
                    <input type="text" class="form-control" value="@Model.Department.GroupName" readonly>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Card -->

<partial name="Partials/EditDepartment" for="@Model.Department" />