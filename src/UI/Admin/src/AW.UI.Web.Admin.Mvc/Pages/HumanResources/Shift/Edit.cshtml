@using AW.UI.Web.Admin.Mvc.Controllers;
@using AW.UI.Web.Admin.Mvc.ViewModels.Shift;
@model ShiftViewModel

<!-- Modal -->
<div class="modal fade" id="editShift" tabindex="-1" role="dialog" aria-labelledby="editShift-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editShift-modal-label">Edit Shift</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input name="Key" type="hidden" value="@Model.Name">

                    <div class="row mb-4">
                        <div class="col-sm-4">
                            <div class="row">
                                @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 col-form-label form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-sm-4">
                            <div class="row">
                                @Html.LabelFor(m => m.StartTime, new { @class = "col-sm-4 col-form-label form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-sm-4">
                            <div class="row">
                                @Html.LabelFor(m => m.EndTime, new { @class = "col-sm-4 col-form-label form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-sm-3">
                        <button type="button" class="btn btn-white me-2 me-sm-0" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update Shift</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>