@using AW.UI.Web.Admin.Mvc.Pages.Customer;
@model DetailStoreModel
@{
}

<!-- Modal -->
<div class="modal fade" id="edit-store-customer" tabindex="-1" role="dialog" aria-labelledby="edit-store-customer-modallabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-store-customer-modallabel">Edit Customer Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    @Html.HiddenFor(_ => _.Customer!.ObjectId)
                    @Html.HiddenFor(_ => _.Customer!.Name)

                    <div class="row mb-4">
                        <div class="col-sm">
                            <div class="row">
                                @Html.LabelFor(m => m.Customer!.Territory, new { @class = "col-sm-4 col-form-label form-label" })
                                <div class="col-sm-8 tom-select-custom">
                                    @Html.DropDownListFor(m => m.Customer!.Territory, Model.Territories, null, new { @class = "js-select form-select", data_hs_tom_select_options = "{ 'searchInDropdown': false, 'hideSearch': true }" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-sm">
                            <div class="row">
                                @Html.LabelFor(m => m.Customer!.SalesPerson, new { @class = "col-sm-4 col-form-label form-label" })
                                <div class="col-sm-8 tom-select-custom">
                                    @Html.DropDownListFor(m => m.Customer!.SalesPerson, Model.SalesPersons, null, new { @class = "js-select form-select", data_hs_tom_select_options = "{ 'searchInDropdown': false, 'hideSearch': true }" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-sm-3">
                        <button type="button" class="btn btn-white me-2 me-sm-0" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update Customer Information</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>